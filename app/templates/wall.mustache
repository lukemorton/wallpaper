<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>Wall</title>
    <link rel="stylesheet" href="/css/screen.css" />
  </head>
  <body>
    <h1>Wall</h1>

    <form method="post">
      <h2>Create a post</h2>
      
      {{#post}}
        {{#success}}
          <div class="success">
            Posted
          </div>
        {{/success}}
        
        <div class="field">
            <label for="post">Post message to your wall:</label>
            {{#content}}
              <textarea id="post" name="content">{{value}}</textarea>
              {{#error}}
                <span class="error">{{error}}</span>
              {{/error}}
            {{/content}}
        </div>
      {{/post}}

      <div class="field">
        <button>post</button>
      </div>
    </form>

    <section id="posts">
      <h2>Posts</h2>

      {{#has_latest_posts}}
        <ul>
          {{#latest_posts}}
            <li>{{content}}</li>
          {{/latest_posts}}
        </ul>
      {{/has_latest_posts}}
      {{^has_latest_posts}}
        <div class="empty">
          You don't have any posts yet!
        </div>
      {{/has_latest_posts}}
    </section>
  </body>
</html>